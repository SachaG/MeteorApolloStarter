{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": "off",
        "no-console": "off",
        "semi": [
            "error",
            "never"
        ]
    },
    "overrides": [
        {   
            "files": ["*.js", "*.jsx", "*.html", "*.json"],
            "excludedFiles": "node_modules/*"
        }
    ]
}